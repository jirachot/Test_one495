<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="Name" />

    <EditText
        android:id="@+id/edtscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtname"
        android:layout_below="@+id/edtname"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="Score" />

    <Button
        android:id="@+id/btn_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_save"
        android:layout_alignBottom="@+id/btn_save"
        android:layout_alignParentRight="true"
        android:layout_marginRight="65dp"
        android:text="Compare" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtgrade"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="62dp"
        android:text="Save" />

    <TextView
        android:id="@+id/txtgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtscore"
        android:layout_marginTop="38dp"
        android:layout_toLeftOf="@+id/btn_grade"
        android:text="TextView" />

</RelativeLayout>
